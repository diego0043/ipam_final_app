<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".AddStudent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/img_add" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:autofillHints="Ingresa tu nombre"
        android:hint="Ingresa tu nombre"
        android:textColor="#3F52E3"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="Ingresa tu carnet"
        android:hint="Ingresa tu carnet"
        android:textColor="#3F52E3"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_career"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="Ingresa tu carrera"
        android:hint="Ingresa tu carrera"
        android:textColor="#3F52E3"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="Ingresa tu año de ingreso"
        android:hint="Ingresa tu año de ingreso"
        android:textColor="#3F52E3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bordes_redondos"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_secondary"
        android:text="Eliminar"
        android:textAllCaps="false"
        android:textColor="#3F52E3" />


</LinearLayout>